<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <AssemblyName>RxBim.RevitTests.Console</AssemblyName>
        <UseCommandLineParser>true</UseCommandLineParser>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Tests.SDK\Tests.SDK.csproj" />
    </ItemGroup>

    <PropertyGroup>
        <PackAsTool>true</PackAsTool>
        <Description>Revit tests framework console.</Description>
        <PackageId>$(AssemblyName)</PackageId>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

</Project>
